  keywords = {Age at maturation,Endangered species,Habitat change,Long-lived fish},
  file = {/home/ted/Zotero/storage/4BKYMYAV/Bakhshalizadeh2017_Article_IdentifyingMajorEventsInTwoStu.pdf}
}

@article{bakhshalizadeh2018,
  title = {Morphological Analysis of Pectoral Fin Spine for Identifying Ecophenotypic Variation of {{Persian}} Sturgeon {{{\emph{Acipenser}}}}{\emph{ Persicus}}},
