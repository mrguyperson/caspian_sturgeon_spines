@article{ruban2019,
  title = {Factors Influencing the Natural Reproduction Decline in the Beluga (\emph{{Huso} huso}, {{Linnaeus}}, 1758), {{Russian}} Sturgeon (\emph{{Acipenser} gueldenstaedtii}, {{Brandt}} \& {{Ratzeburg}}, 1833), and Stellate Sturgeon (\emph{{A}. {s}tellatus}, {{Pallas}}, 1771) of the {{Volga}}\textendash{{Caspian}} Basin: {{A}} Review},
