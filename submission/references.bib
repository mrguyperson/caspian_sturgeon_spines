@article{loewen2016,
  title = {Linking Physiology and Biomineralization Processes to Ecological Inferences on the Life History of Fishes},
  author = {Loewen, T. N. and Carriere, B. and Reist, J. D. and Halden, N. M. and Anderson, W. G.},
