@article{phelps2012,
  title = {Identifying River of Origin for Age-0 {{{\emph{Scaphirhynchus}}}} Sturgeons in the {{Missouri}} and {{Mississippi}} Rivers Using Fin Ray Microchemistry},
  author = {Phelps, Quinton E. and Whitledge, Gregory W. and Tripp, Sara J. and Smith, Kurt T. and Garvey, James E. and Herzog, David P. and Ostendorf, David E. and Ridings, Joseph W. and Crites, Jason W. and Hrabik, Robert A. and Doyle, Wyatt J. and Hill, Tracy D.},
