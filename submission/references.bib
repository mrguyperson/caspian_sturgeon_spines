@article{ibrayev2010,
  title = {Seasonal Variability of the {{Caspian Sea}} Three-Dimensional Circulation, Sea Level and Air-Sea Interaction},
  author = {Ibrayev, R. A. and {\"O}zsoy, E. and Schrum, C. and Sur, H. I.},
  year = {2010},
